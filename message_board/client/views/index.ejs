<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dojo Message Board</title>
    <link rel="stylesheet" href="./style.css"charset="utf-8">
  </head>
  <body>
    <div class = "container">
      <h1>The Dojo Message Board!</h1>
      <form action="/messages" method="post">
        Name:<input type="text" name="name"><br>
        Message:<input type="text" name="message"><br>
        <input type="submit" value="Post Message">
      </form>
      <%
      if(typeof errmess === 'undefined'){

      } else { %>
        <p><%= errmess.name.message %></p>
        <p><%= errmess.message.message %></p>
      <% };

      if(typeof data === 'undefined'){

      } else {
        for(x in data){
          message = data[x]; %>
          <p> **<%= message.name %>** </p>
          <p> "<%= message.message %>" </p>
          <%
          for(actcomment in message.comment){
            thecomment = message.comment[actcomment]; %>
          <p><%= thecomment.name %> says: "<%= thecomment.comment %>"</p>
          <form action="/comments/<%= message._id %>" method="post">
            Name:<input type="text" name="name"><br>
            Comment:<input type="text" name="comment"><br>
            <input type="submit" value="Add Comment">
          </form>
          <% } %>
        }
      }
      %>
    </div>
  </body>
</html>
